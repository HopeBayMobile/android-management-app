<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_below="@+id/logo"
    android:layout_alignParentStart="true"
    android:visibility="visible">

    <com.hopebaytech.hcfsmgmt.customview.FontTextView
        style="@style/F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/activate_with_google_account" />

    <RelativeLayout
        android:id="@+id/google_drive_activate"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/button_shadow_normal"
        android:clickable="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:src="@drawable/icon_btn_google_account" />

        <TextView
            android:id="@+id/google_drive_activate_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="true"
            android:paddingStart="45dp"
            android:paddingEnd="0dp"
            android:text="google drive"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/swift_activate"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/button_shadow_normal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:src="@drawable/icon_btn_openstack_swift" />

        <TextView
            android:id="@+id/swift_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="45dp"
            android:paddingEnd="0dp"
            android:textAllCaps="true"
            android:text="Swift"/>
    </RelativeLayout>

</LinearLayout>
