<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/C1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:layout_marginStart="@dimen/M2"
        android:layout_marginEnd="@dimen/M2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/icon_image_width"
            android:layout_height="@dimen/icon_image_width"
            android:src="@drawable/icon_default_portrait" />

        <com.hopebaytech.hcfsmgmt.customview.FontTextView
            style="@style/F6"
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/email"
            tools:text="Android Studio" />

        <com.hopebaytech.hcfsmgmt.customview.FontTextView
            style="@style/F5"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M6"
            android:layout_marginBottom="@dimen/M6"
            android:layout_alignParentBottom="true"
            tools:text="android.studio@android.com" />

    </RelativeLayout>

</LinearLayout>