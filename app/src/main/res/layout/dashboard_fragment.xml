<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_title_bar_height"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fragment_title_bar_padding_bottom"
            android:paddingLeft="@dimen/fragment_title_bar_padding_left"
            android:paddingRight="@dimen/fragment_title_bar_padding_right"
            android:paddingTop="@dimen/fragment_title_bar_padding_top">

            <ImageView
                android:id="@+id/network_conn_status_icon"
                android:layout_width="@dimen/item_image_height_width"
                android:layout_height="@dimen/item_image_height_width"
                android:src="@drawable/icon_transmission_normal" />

            <TextView
                android:id="@+id/network_conn_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                tools:text="連線正常"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/fragment_vertical_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                        android:layout_marginRight="@dimen/fragment_horizontal_margin"
                        android:text="@string/dashboard_space_usage_title"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorAccent" />

                    <include
                        android:id="@+id/cloud_storage"
                        layout="@layout/dashboard_usage_item" />

                    <View style="@style/Divider" />

                    <include
                        android:id="@+id/pinned_storage"
                        layout="@layout/dashboard_usage_item" />

                    <View style="@style/Divider" />

                    <include
                        android:id="@+id/to_be_upload_data"
                        layout="@layout/dashboard_usage_item" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/networkTrafficTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                        android:layout_marginRight="@dimen/fragment_horizontal_margin"
                        android:text="@string/dashboard_network_traffic_title"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorAccent" />

                    <include
                        android:id="@+id/network_xfer_today"
                        layout="@layout/dashboard_xfer_item" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>