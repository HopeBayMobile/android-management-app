<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/M2"
        android:layout_marginStart="@dimen/M2"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.hopebaytech.hcfsmgmt.customview.FontTextView
            style="@style/F6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_info_current_account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/icon_image_width"
                android:layout_height="@dimen/icon_image_height"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/icon_default_portrait" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/M2"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <com.hopebaytech.hcfsmgmt.customview.FontTextView
                    android:id="@+id/user_name"
                    style="@style/F6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/M6"
                    tools:text="Lucas Tsai" />

                <com.hopebaytech.hcfsmgmt.customview.FontTextView
                    android:id="@+id/user_email"
                    style="@style/F6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="lucas.tsai@gmail.com" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/HorizontalDivider"
        android:layout_marginEnd="@dimen/M1"
        android:layout_marginStart="@dimen/M1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/M6"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="@dimen/M6"
        android:gravity="center">

        <LinearLayout
            android:layout_width="244dp"
            android:layout_height="36dp"

            android:background="@color/C1">

            <com.hopebaytech.hcfsmgmt.customview.FontTextView
                style="@style/F2"
                android:id="@+id/change_account"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/user_info_change_account_button" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>