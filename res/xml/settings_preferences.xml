<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="同步設定" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_sync_wifi_only"
            android:title="WIFI連線時上傳資料" />
    </PreferenceCategory>
    <PreferenceCategory android:title="通知設定" >
        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_notify_conn_failed_recovery"
            android:title="通知連線中斷/恢復" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_notify_upload_completed"
            android:title="通知上傳資料完成" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_notify_lack_of_local_space"
            android:title="通知本地暫存空間不足" />
    </PreferenceCategory>

</PreferenceScreen>